{{!-- 下拉選單 --}}
<div class="d-flex-inline my-5 text-center">
  <a class="dropdown-toggle btn btn-outline-secondary" style="width: 40%" href="#" role="button" data-bs-toggle="dropdown"
    aria-expanded="false">類別</a>

  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="/">全部</a></li>
    <li><a class="dropdown-item" href="/search?category=家居物業">家居物業</a></li>
    <li><a class="dropdown-item" href="/search?category=交通出行">交通出行</a></li>
    <li><a class="dropdown-item" href="/search?category=休閒娛樂">休閒娛樂</a></li>
    <li><a class="dropdown-item" href="/search?category=餐飲食品">餐飲食品</a></li>
    <li><a class="dropdown-item" href="/search?category=其他">其他</a></li>
  </ul>
</div>

<div class="d-inline-flex justify-content-center mb-5">
  總金額：<h1 class="mx-5">${{ totalAmount }}</h1>
</div>

<div class="d-flex-inline text-center mx-auto" style="width: 40%">
  <ul class="list-group mb-5">
    {{#each records}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <i class='{{ this.image }} ms-4' style="font-size: 1.5em"></i>
      <div class="d-flex flex-column mx-5">
        <div>{{ this.name }}</div>
        <div>{{ this.date }}</div>
      </div> 
      
      <span class="badge bg-primary rounded-pill me-5" style="font-size: 0.95em">{{ this.amount }}</span>
      <div>
        <a href="/records/{{ this._id }}/edit" class="btn">修改</a>
        <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">刪除</button>
        </form>
      </div>
    </li>
    {{/each}}
</ul>
</div>
<div class="container text-center">
  <a href="/records/new" class="btn btn-primary" style="width: 30%">新增支出</a>
</div>